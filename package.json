{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Smart contracts repository",
  "main": "index.js",
  "keywords": [
    "g7",
    "games",
    "smart contracts",
    "web3",
    "blockchain",
    "EVM",
    "Solidity",
    "ethereum",
    "Game7",
    "DAO"
  ],
  "author": "Omar Garcia(ogarciarevett)",
  "license": "MIT",
  "engines": {
    "node": ">=18.12.1"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "hardhat node",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "console": "hardhat console",
    "finder": "hardhat finder",
    "deploy:all": "hardhat run scripts/deploy.ts --network",
    "deploy-verify:all": "hardhat run scripts/deployAndVerify.ts --network",
    "verify": "hardhat verify --network",
    "test": "hardhat test",
    "test:trace": "hardhat test --trace",
    "test:fresh": "hardhat compile --force && hardhat test --no-compile --trace",
    "test:coverage": "hardhat coverage",
    "build": "build.sh",
    "analyze:static": "docker run -v $(pwd):/G7 analyze:latest slither",
    "analyze:security": "docker run -v $(pwd):/G7 analyze:latest myth analyze --solc-json mythril.config.json",
    "analyze:all": "analyze.sh",
    "generate:docs": "hardhat docgen",
    "generate:badges": "istanbul-badges-readme",
    "format": "prettier '**/{*,''}.{json,js,ts,sol}' --write; eslint '**/{*,''}.{json,js,ts}' --fix; solhint 'contracts/*.sol' --fix;",
    "format:json": "prettier '**/{*,''}.json' --write; eslint '**/{*,''}.json' --fix;",
    "format:js": "prettier '**/{*,''}.js' --write; eslint '**/{*,''}.js' --fix;",
    "format:ts": "prettier '**/{*,''}.ts' --write; eslint '**/{*,''}.ts' --fix;",
    "format:sol": "prettier '**/*.sol' --write; solhint 'contracts/*.sol' --fix;",
    "lint": "prettier '**/{*,''}.{json,js,ts,sol}' --check; solhint 'contracts/*.sol'; eslint '**/{*,''}.{json,js,ts}';",
    "hook:pre-push": "tsc --noEmit && prettier '**/{*,''}.{json,js,ts,sol}' --check && solhint 'contracts/*.sol' && eslint '**/{*,''}.{json,js,ts}'"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run hook:pre-push"
    }
  },
  "dependencies": {
    "@moonstream/engine": "^0.0.1",
    "@openzeppelin/contracts": "^4.8.0",
    "dotenv": "^16.0.3",
    "hardhat": "^2.12.6"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@tenderly/hardhat-tenderly": "^1.5.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "chai": "^4.3.7",
    "chalk": "^4.1.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^5.7.2",
    "hardhat-docgen": "^1.3.0",
    "hardhat-finder": "^2.0.2",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-storage-layout": "^0.1.7",
    "hardhat-tracer": "^1.2.1",
    "husky": "^8.0.3",
    "istanbul-badges-readme": "^1.8.4",
    "mocha": "^10.2.0",
    "prettier": "^2.8.2",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  }
}
